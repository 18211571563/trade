<!-- local -->
<configuration>
    <property name="DEFAULT_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{X-B3-TraceId}] [%X{X-B3-SpanId}] [trade] [%logger{0}] - %msg%n"/>
    <property name="SIMPLE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%logger{0}] - %msg%n"/>


    <!-- 控制台输出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${DEFAULT_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 按照每天生成日志文件 -->
    <appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>D:/workspace/logs/trade/sys.txt</File>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
            <!--<OnMismatch>DENY</OnMismatch>-->
            <!--<OnMatch>ACCEPT</OnMatch>-->
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <fileNamePattern>D:/workspace/logs/trade/sys_%d{yyyy-MM-dd}.txt</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${DEFAULT_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 资产日志 -->
    <appender name="asset" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator>
            <key>traceId</key>
            <defaultValue>default</defaultValue>
        </discriminator>
        <sift>
            <!--具体的写日志appender，每一个taskId创建一个文件-->
            <appender name="File-Asset" class="ch.qos.logback.core.FileAppender">
                <File>D:/workspace/logs/trade/${traceId}/asset.txt</File>
                <append>true</append>
                <filter class="ch.qos.logback.classic.filter.LevelFilter">
                    <level>INFO</level>
                    <!--<OnMismatch>DENY</OnMismatch>-->
                    <!--<OnMatch>ACCEPT</OnMatch>-->
                </filter>
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                    <!--日志文件输出的文件名-->
                    <fileNamePattern>D:/workspace/logs/trade/${tsCode}/asset_%d{yyyy-MM-dd}.txt</fileNamePattern>
                    <maxHistory>7</maxHistory>
                </rollingPolicy>
                <encoder>
                    <pattern>${SIMPLE_LOG_PATTERN}</pattern>
                    <charset>UTF-8</charset>
                </encoder>
            </appender>
        </sift>
    </appender>

    <appender name="trade" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator>
            <key>tsCode</key>
            <defaultValue>default</defaultValue>
        </discriminator>
        <sift>
            <!--具体的写日志appender，每一个taskId创建一个文件-->
            <appender name="File-Trade" class="ch.qos.logback.core.FileAppender">
                <File>D:/workspace/logs/trade/t/${tsCode}.txt</File>
                <append>true</append>
                <filter class="ch.qos.logback.classic.filter.LevelFilter">
                    <level>INFO</level>
                    <!--<OnMismatch>DENY</OnMismatch>-->
                    <!--<OnMatch>ACCEPT</OnMatch>-->
                </filter>
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                    <!--日志文件输出的文件名-->
                    <fileNamePattern>D:/workspace/logs/trade/t/${tsCode}_%d{yyyy-MM-dd}.txt</fileNamePattern>
                    <maxHistory>7</maxHistory>
                </rollingPolicy>
                <encoder>
                    <pattern>${SIMPLE_LOG_PATTERN}</pattern>
                    <charset>UTF-8</charset>
                </encoder>
            </appender>
        </sift>
    </appender>

    <appender name="todayTrade" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator>
            <key>traceId</key>
            <defaultValue>default</defaultValue>
        </discriminator>
        <sift>
            <!--具体的写日志appender，每一个taskId创建一个文件-->
            <appender name="File-TodayTrade" class="ch.qos.logback.core.FileAppender">
                <File>D:/workspace/logs/trade/${traceId}/todayTrade.txt</File>
                <append>true</append>
                <filter class="ch.qos.logback.classic.filter.LevelFilter">
                    <level>INFO</level>
                    <!--<OnMismatch>DENY</OnMismatch>-->
                    <!--<OnMatch>ACCEPT</OnMatch>-->
                </filter>
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                    <!--日志文件输出的文件名-->
                    <fileNamePattern>D:/workspace/logs/trade/${traceId}/todayTrade_%d{yyyy-MM-dd}.txt</fileNamePattern>
                    <maxHistory>7</maxHistory>
                </rollingPolicy>
                <encoder>
                    <pattern>${SIMPLE_LOG_PATTERN}</pattern>
                    <charset>UTF-8</charset>
                </encoder>
            </appender>
        </sift>
    </appender>

    <appender name="capital" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator>
            <key>traceId</key>
            <defaultValue>default</defaultValue>
        </discriminator>
        <sift>
            <!--具体的写日志appender，每一个taskId创建一个文件-->
            <appender name="File-Capital" class="ch.qos.logback.core.FileAppender">
                <File>D:/workspace/logs/trade/${traceId}/capital.txt</File>
                <append>true</append>
                <filter class="ch.qos.logback.classic.filter.LevelFilter">
                    <level>INFO</level>
                    <!--<OnMismatch>DENY</OnMismatch>-->
                    <!--<OnMatch>ACCEPT</OnMatch>-->
                </filter>
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                    <!--日志文件输出的文件名-->
                    <fileNamePattern>D:/workspace/logs/trade/${traceId}/capital_%d{yyyy-MM-dd}.txt</fileNamePattern>
                    <maxHistory>7</maxHistory>
                </rollingPolicy>
                <encoder>
                    <pattern>${SIMPLE_LOG_PATTERN}</pattern>
                    <charset>UTF-8</charset>
                </encoder>
            </appender>
        </sift>
    </appender>


    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="rollingFile"/>
    </root>

    <logger name="trade" level="INFO" additivity="false">
        <appender-ref ref="trade"/>
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="todayTrade" level="INFO" additivity="false">
        <appender-ref ref="todayTrade"/>
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="asset" level="INFO" additivity="false">
        <appender-ref ref="asset"/>
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="capital" level="INFO" additivity="false">
        <appender-ref ref="capital"/>
        <appender-ref ref="STDOUT" />
    </logger>
</configuration>